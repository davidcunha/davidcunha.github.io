{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:compat/recommended"
  ],
  "plugins": ["react", "compat"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16.5"
    }
  },
  "rules": {
    "compat/compat": 1,
    "class-methods-use-this": [
      2,
      {
        "exceptMethods": ["render", "componentDidMount"]
      }
    ]
  }
}
